{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "outDir": "dist",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "isolatedModules": true,
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "declaration": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
